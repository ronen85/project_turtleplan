<launch>
  <param name="/use_sim_time" value="true"/>

  <!-- Run the map server -->
  <arg name="map_file" default="$(find project_turtleplan)/maps/turtlePlan7.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" >
    <param name="frame_id" value="/map" />
  </node>

  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <param name="amcl/initial_pose_x" value="0" />
    <param name="amcl/initial_pose_y" value="0" />
    <include file="$(find project_turtleplan)/launch/navOneTurtle.launch" />
  </group>

  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <param name="amcl/initial_pose_x" value="0" />
    <param name="amcl/initial_pose_y" value="2" />
    <include file="$(find project_turtleplan)/launch/navOneTurtle.launch" />
  </group>

  <group ns="robot3">
    <param name="tf_prefix" value="robot3_tf" />
    <param name="amcl/initial_pose_x" value="0" />
    <param name="amcl/initial_pose_y" value="4" />
    <include file="$(find project_turtleplan)/launch/navOneTurtle.launch" />
  </group>

  <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find turtlebot_rviz_launchers)/rviz/navigation.rviz"/> -->

</launch>
